{
    "metadata": [
        {
            "src": [
                {
                    "files": [ "VisualCard/**.csproj" ],
                    "src": ".."
                }
            ],
            "dest": "api",
            "disableGitFeatures": false,
            "disableDefaultFilter": false,
            "filter": "filterConfig.yml"
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "index.md",
                    "toc.yml"
                ]
            }
        ],
        "resource": [
            {
                "files": [ "images/**" ]
            }
        ],
        "dest": "../docs",
        "globalMetadata": {
            "_appTitle": "VisualCard API - Aptivi",
            "_enableSearch": true
        },
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": [ "default" ],
        "postProcessors": [],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false,
        "sitemap": {
            "baseUrl": "https://aptivi.github.io/VisualCard/"
        }
    }
}
